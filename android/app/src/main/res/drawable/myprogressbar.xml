<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#00ffffff" android:centerColor="#00ffffff"
                android:centerY="0.75" android:endColor="#00ffffff" android:angle="90" />
            <stroke android:width="2dp" android:color="#009DCD" />
            <corners android:radius="25dip" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="#009DCD" android:endColor="#009DCD"
                    android:angle="90" />
                <stroke android:width="2dp" android:color="#009DCD" />
                <corners android:radius="25dip" />
            </shape>
        </clip>
    </item>
</layer-list>